{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2021", "DOM"],
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/renderer/core/*"],
      "@config/*": ["src/renderer/config/*"],
      "@runtime/*": ["src/renderer/runtime/*"],
      "@ui/*": ["src/renderer/ui/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"]
    },
    "outDir": "dist/renderer",
    "sourceMap": true
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/services/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
